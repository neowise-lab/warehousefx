<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="220.0" styleClass="side-bar" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label maxWidth="1.7976931348623157E308" styleClass="title" text="Категории" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" onAction="#create" prefHeight="34.0" prefWidth="34.0">
               <styleClass>
                  <String fx:value="action-button" />
                  <String fx:value="plus" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#edit" prefHeight="34.0" prefWidth="34.0">
               <styleClass>
                  <String fx:value="action-button" />
                  <String fx:value="edit" />
               </styleClass>
            </Button>
         </children>
         <VBox.margin>
            <Insets right="5.0" />
         </VBox.margin>
      </HBox>
      <ListView fx:id="categoryList" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
